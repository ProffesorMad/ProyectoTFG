@model ProyectoTFG_League.Models.AspectoModelo

@{
    ViewData["Title"] = "Eliminar Aspecto";
}

<h1>Eliminar Aspecto</h1>

<h3>¿Está seguro de que desea eliminar este aspecto?</h3>

<div>
    <h4>Aspecto</h4>
    <hr />
    <dl class="row">
        <dd class="col-sm-10">
            @if (Model.Imagen != null && Model.Imagen.Length > 0)
            {
                <img src="data:image;base64,@(Convert.ToBase64String(Model.Imagen))" alt="Imagen" style="max-width: 200px; max-height: 200px;" />
            }
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CampeonNombre.Nombre)
        </dd> 
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
