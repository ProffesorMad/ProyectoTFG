@model IEnumerable<ProyectoTFG_League.Models.HabilidadModelo>

@{
    ViewData["Title"] = "Habilidades";
}

<style>
    .text-center {
        text-align: center;
    }
    .font-weight-bold {
        font-weight: bold;
    }
    .img-thumbnail {
        display: block;
        margin-left: auto;
        margin-right: auto;
    }
    .table {
        margin-top: 20px;
    }
    .table th, .table td {
        vertical-align: middle;
    }
    .btn-sm {
        margin: 2px;
    }

    .float-left {
        float: left;
    }

    .float-right {
        float: right;
    }
</style>

<h1 class="text-center">Lista de Habilidades</h1>

<div class="mb-3">
    <a asp-action="Busqueda" class="btn btn-primary float-left">Aplicar Filtros</a>
    <a asp-action="Create" class="btn btn-primary float-right">Añadir Nueva Habilidad</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th class="text-center"></th>
            <th class="text-center">Nombre</th>
            <th class="text-center">Tipo</th>
            <th class="text-center">Campeón</th>
            <th class="text-center">Descripción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    @if (item.Imagen != null && item.Imagen.Length > 0)
                    {
                        <img src="data:image;base64,@Convert.ToBase64String(item.Imagen)" alt="Imagen de @item.Nombre" width="60" height="60" />
                    }
                </td>
                <td class="text-center font-weight-bold">@item.Nombre</td>
                <td class="text-center">@item.Tipo</td>
                <td class="text-center">@item.CampeonNombre?.Nombre</td>
                <td class="text-center">@item.DescripicionH</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-warning mb-2">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
