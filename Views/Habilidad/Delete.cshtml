@model ProyectoTFG_League.Models.HabilidadModelo

@{
    ViewData["Title"] = "Eliminar Habilidad";
}

<h1 class="text-center">Eliminar Habilidad</h1>
<br />
<h3>¿Está seguro que quiere eliminar esta habilidad?</h3>
<br />
<div class="form-horizontal">
    <dl class="row">
        <dd class="col-sm-10">
            @if (Model.Imagen != null)
            {
                <img src="data:image;base64,@(Convert.ToBase64String(Model.Imagen))" alt="Imagen" class="img-thumbnail" width="75" height="75" />
            }
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <div class="form-group">
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
