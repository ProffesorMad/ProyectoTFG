@model ProyectoTFG_League.Models.ModoJuegoModelo

@{
    ViewData["Title"] = "Eliminar Modo de Juego";
}

<h1 class="text-center">¿Está seguro que desea eliminar este Modo de Juego?</h1>
<br />
<div>
    <dl class="row">
        <dd class="col-sm-10">
            <span class="font-weight-bold display-6">@Html.DisplayFor(model => model.Nombre)</span>
        </dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />   
        &nbsp;&nbsp;
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
