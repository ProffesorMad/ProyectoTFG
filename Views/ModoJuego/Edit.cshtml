@model ProyectoTFG_League.Models.ModoJuegoModelo

@{
    ViewData["Title"] = "Editar Modo de Juego";
}

<h1 class="text-center">Editar Modo de Juego</h1>
<hr />
<form asp-action="Edit" method="post" class="form-horizontal">
    <input type="hidden" asp-for="ID" />
    <div class="form-group">
        <label asp-for="Nombre" class="control-label col-md-2">Nombre</label>
        <div class="col-md-3">
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Tipo" class="control-label col-md-2">Tipo</label>
        <div class="col-md-2">
            <select asp-for="Tipo" class="form-control">
                @foreach (var tipo in ViewBag.Tipos)
                {
                    <option value="@tipo">@tipo</option>
                }
            </select>
            <span asp-validation-for="Tipo" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="DescripcionM" class="control-label col-md-2">Descripción</label>
        <div class="col-md-5">
            <textarea asp-for="DescripcionM" class="form-control"></textarea>
            <span asp-validation-for="DescripcionM" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-primary" />
            &nbsp;&nbsp;
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </div>
</form>
<br />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
