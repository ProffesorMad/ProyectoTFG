@model ProyectoTFG_League.Models.RolModelo

@{
    ViewData["Title"] = "Eliminar Rol";
}

<h1 class="text-center">¿Está seguro que desea eliminar este Rol?</h1>
<br />
<div>
    <h4>Rol</h4>
    <hr />
    <dl class="row">
        <dd class="col-sm-10">
            @if (Model.Imagen != null && Model.Imagen.Length > 0)
            {
                <img src="data:image;base64,@Convert.ToBase64String(Model.Imagen)" alt="Imagen de @Model.Nombre" width="75" height="75" />
            }
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
