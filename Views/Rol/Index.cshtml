@model IEnumerable<ProyectoTFG_League.Models.RolModelo>

@{
    ViewData["Title"] = "Lista de Roles";
}

<h1 class="text-center">Lista de Roles</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th class="text-center"></th>
            <th class="text-center">Rol</th>
            <th class="text-center">Descripción</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var rol in Model)
        {
            <tr>
                <td class="text-center">
                    @if (rol.Imagen != null && rol.Imagen.Length > 0)
                    {
                        <img src="data:image;base64,@Convert.ToBase64String(rol.Imagen)" alt="Imagen de @rol.Nombre" style="max-height: 100px;" />
                    }
                </td>
                <td class="text-center-cell">@rol.Nombre</td>
                <td class="text-center">@rol.DescripcionR</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Create" class="btn btn-primary">Añadir Nuevo Rol</a>
</div>
