@model ProyectoTFG_League.Models.RolModelo

@{
    ViewData["Title"] = "Añadir Rol";
}

<h1 class="text-center">Añadir Rol</h1>
<br />
<form asp-action="Create" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="Nombre" class="control-label col-md-2">Nombre</label>
        <div class="col-md-2">
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="DescripcionR" class="control-label col-md-2">Descripción</label>
        <div class="col-md-5">
            <textarea asp-for="DescripcionR" class="form-control"></textarea>
            <span asp-validation-for="DescripcionR" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Crear" class="btn btn-primary" />
        </div>
    </div>
    <br />
</form>

<div>
    <a asp-action="Index" class="btn btn-secondary">Volver al Index</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
