@model ProyectoTFG_League.Models.HechizoModelo

@{
    ViewData["Title"] = "Eliminar Hechizo";
}

<h1>Eliminar Hechizo</h1>
<br />
<h3>¿Estás Seguro de que quieres Eliminar este Hechizo?</h3>
<br />
<div>
    <hr />
    <dl class="row">
        <dd class="col-sm-10">
            @if (Model.Imagen != null)
            {
                <img src="data:image;base64,@(Convert.ToBase64String(Model.Imagen))" alt="Imagen" class="img-thumbnail" width="75" height="75" />
            }
        </dd>
        <dd class="col-sm-10">
            <span class="font-weight-bold display-6">@Html.DisplayFor(model => model.Nombre)</span>
        </dd>    
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        &nbsp;&nbsp;
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
